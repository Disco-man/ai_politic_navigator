{
  "appId": "com.matrixinfo.political-navigator",
  "productName": "AI Political Navigator",
  "directories": {
    "output": "release",
    "buildResources": "electron/resources"
  },
  "files": [
    "dist/**/*",
    "electron/main.js",
    "electron/preload.js"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/globe.png",
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "AI Political Navigator"
  },
  "portable": {
    "artifactName": "${productName}-Portable-${version}.${ext}"
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "public/globe.png",
    "category": "public.app-category.education"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "public/globe.png",
    "category": "Education"
  }
}
